# API Optimization Configuration
# Cache TTL values in seconds
CACHE_TTL_SHORT=300       # 5 minutes - for frequently changing data (road conditions, weather)
CACHE_TTL_MEDIUM=1800     # 30 minutes - for moderate changes (cameras, digital signs)
CACHE_TTL_LONG=7200       # 2 hours - for slow changing data (traffic events, alerts)
CACHE_TTL_STATIC=86400    # 24 hours - for static-like data (rest areas)

# Rate limiting
MIN_API_INTERVAL=30000    # 30 seconds between API calls of same type

# Disk cache settings
DISK_CACHE_DIR=.cache
DISK_CACHE_MAX_AGE=7200000  # 2 hours in milliseconds

# Stale data fallback thresholds
STALE_DATA_MAX_AGE=86400000 # 24 hours in milliseconds

# UDOT API Configuration (set your actual API key)
# UDOT_API_KEY=your_api_key_here